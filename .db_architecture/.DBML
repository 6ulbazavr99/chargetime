// account.app //
Table Account {
  app account
  id int
  email email
  phone phone
  username varchar
  charge_type id [ref: <> Charge_Type.id]
  balance int
  bonuses int
  first_name varchar
  last_name varchar
  role choice
  avatar img
}
// account.app //



// station.app //
Table Charge_Type {
  app station
  id int
  type varchar
  power int
}

Table Column {
  app station
  id int
  price int
  charge_type id [ref: - Station.charge_types]
  status bool
}

Table Station {
  app station
  id int
  charge_types id [ref: <> Charge_Type.id] 
  description text
  address geo
  name varchar 
  columns id [ref: < Column.id]
  capacity count [ref: < Station.columns]
  schedule richtext
  images id [ref: < Station_Image.id]
}

Table Station_Image {
  app station
  id int
  image img
  name varchar
}

Table Review_Image {
  app station
  id int
  image img
  name varchar
}

Table Review {
  app station
  id int
  rating choice
  body text
  station id [ref: - Station.id]
  images id [ref: < Review_Image.id]
}
// station.app //